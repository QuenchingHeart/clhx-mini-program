@import "colorui/main.wxss";
@import "colorui/icon.wxss";
@import "libs/iconfont/iconfont.wxss";

page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.page-body {
  padding: 0 0;
}

.btn-area{
  margin-top: 60rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
}

.cu-list.menu-avatar>.cu-item .content {
  left:30rpx;
  width:calc(100% - 190rpx-20rpx);
}

.cu-list.menu-avatar>.cu-item .action {
  width:190rpx;
}
.cu-list.menu-avatar>.cu-item{
  height: 200rpx;
}
.cu-list.menu-avatar>.cu-item .content{
  line-height: 1.3em;
}
.cu-list.menu-avatar>.cu-item>.content .title{
  line-height: 2em;
}
.cu-form-group textarea {
  height: 8.6em;
}