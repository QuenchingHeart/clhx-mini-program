.tab-bar {

  bottom: 0px;
  left: 0px;
  right: 0px;
  width: 100%;
  height: 120rpx;
  background: white;
  display: flex;
  flex-direction: row;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  background-color: #e4e4e4;
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 10rpx;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding-top: 12rpx;
}

.cover-image {
  width: 56rpx;
  height: 56rpx;
}

.tab-bar-item cover-view {
  font-size: 20rpx;
}

.centerImage {
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  top: -30rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
}

.add{
  position: absolute;
  bottom: 10rpx;
}