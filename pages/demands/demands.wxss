/* pages/demands/demands.wxss */
@import "../../colorui/main.wxss";
@import "../../colorui/icon.wxss";
.search_key,.search_place{
  position: relative;
  float: left;
  margin-top: 1%;
  height: 5%;
}

.search_place{
  width:38%;
}
.search_key{
  width: 58%;
}

.scroll-x{
  position: relative;
  height: 15%;
  white-space:nowrap;
  display:inline-block;
}

.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.search_arr input{
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
}

 
.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  right:25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}

/* 隐藏scrollbar */
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}
.view-parent{
    position: relative;
    display:inline-block;
    font-size: 5rpx;
    height: 100%;
    width: 125rpx;
    margin-top:10px;
}
.view-item{
   position: relative;
    width:100%;
    height:100%;
    display:flex;
    align-items:center;
    justify-content:center;
    font-size:12px;
}

.list_all{
  height: 79%;
  position: relative;
  width: 96%;
  margin-left: 2%;
  margin-top: 2%;
}

.categoryB,.demands_list{
  position: relative;
  width: 20%;
  height: 98%;
  border: 1rpx solid black;
  float: left;
}

.list_head{
  background-color: rgb(65,199,219);
  line-height: 100rpx;
  text-align: center
}
.categoryB_list{
  position: relative;
  height: 100rpx;
  width: 100%;
  text-align: center;  
}
.category_item{
  position: relative;
  width: 100%;
  height: 50rpx;
  text-align: center;
}

.demands_list{
   width: 70%;
   margin-left: 5%;
}

.demands_list_item{
  width: 100%;
  height: 100rpx;
  position: relative;
}

.icon_im{
  top:0rpx;
  height: 60%;
  width: 100%;
  border-radius:50%;
  position: absolute;
}
.im{
  height: 100%;
  width: 100%;
  border-radius:50%;
  position: absolute;

}
.icon_txt{
  top: 60%; 
  height: 30%;
  width: 100%;
  text-align: center;
  position: absolute;
  font-size: 30rpx;

}

.add{
  position: absolute;
  width:36px;
  height:36px;
  bottom: 30px;
  right: 30px;
  z-index: 1;
}
.add_icon{
  width:36px;
  height:36px;
}
.add_icon_txt{
  position: fixed;
  text-align: center;
  width:56px;
  height:20px;
  bottom: 10px;
  right: 20px;
}

.VerticalNav.nav {
  width: 200rpx;
  white-space: initial;
}

.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 60px;
  position: relative;
}

.VerticalNav.nav .cu-item.cur {
  background-color: #f1f1f1;
}
.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}
.VerticalBox{
  display: flex;
}
.VerticalMain{
  background-color: #f1f1f1;
}

.cu-list.menu-avatar>.cu-item .content {
	position: absolute;
	left: 30rpx;
	width: calc(100% - 60rpx - 160rpx - 20rpx);
	line-height: 1.6em;
}

.cu-list.menu-avatar>.cu-item .action {
	width: 200rpx;

}

.cu-list.menu-avatar>.cu-item {
  height: 170rpx;
  margin-bottom: 5rpx;
}

.cu-list.grid>.cu-item [class*=cuIcon] {
  margin-top: 0rpx;
  font-size: 40rpx;
}

.cu-list.grid>.cu-item text {
  font-size: 24rpx;
}